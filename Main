<!DOCTYPE HTML>
<html>
  <head>
    <style>
      body {
        margin: 0px;
        padding: 0px;
      }
    </style>
  </head>
  <body>
    <canvas id="myCanvas" width="1200" height="768"></canvas>
    <script>
    "use strict";


var canvas = document.getElementById('myCanvas'),
ctx = canvas.getContext("2d");
var cameraHeight = 20, cameraX = 600, cameraY = 384;

class wall{
    constructor(X1B,Y1B,X2B,Y2B,Height,colour){
    }
    
    draw(RX,RY,RH){
    }
    
    collidecheck(XO,YO){
    }
{
}

var x = 600, y = 384, velY = 0, velX = 0, speed = 50,friction = 0.9;
var keys = [];
function update() {

    if (keys[87]) {
        if (velY > -speed) {
            velY--;
        }
    }
    
    if (keys[83]) {
        if (velY < speed) {
            velY++;
        }
    }
    if (keys[68]) {
        if (velX < speed) {
            velX++;
        }
    }
    if (keys[65]) {
        if (velX > -speed) {
            velX--;
	    
        }
    }
    velY *= friction;
    y += velY;
    velX *= friction;
    x += velX;
    
    ctx.setTransform(1, 0, 0, 1, 0, 0);
    ctx.clearRect(0, 0, 1200, 768);

    ctx.setTransform(1, 0, 0, 1, 600-x, 384-y);
    var guy = new Image();
    guy.onload =  function(){
	ctx.drawImage(guy, x, y)
    };
    guy.src = '../quick-Sprite.png';
 

    cameraX = x;
    cameraY = y + 150;
    setTimeout(update, 10);
}

update();

document.body.addEventListener("keydown", function (e) {
    keys[e.keyCode] = true;
});
document.body.addEventListener("keyup", function (e) {
    keys[e.keyCode] = false;
});




/*
